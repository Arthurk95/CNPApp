<!DOCTYPE html>
<html>
  <nav><%- include header.ejs %></nav>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/blockList.css' />
    <link rel='stylesheet' href='/stylesheets/footer.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="/javascripts/studentSelection.js"></script>
  </head>
  <body>
    
      <!-- Only display if there are students AND activities-->
    <% if (students.length > 0) {%>
        <% if (activities.length > 0) {%>
            <ul id="selectionButtons" class="selectionButtons">
                <li><a id="studentButton" onclick="startWithStudents()">Select Students</a></li>
                <li><a id="activitiesButton" onclick="startWithActivities()">Select Activity</a></li>
            </ul>
            <%- include listOfStudents.ejs %></ul>
            <%- include listOfActivities.ejs %></ul>
        <% } else { %>
            <h2>No activities</h2>
        <% } %>
    <% } else { %>
        <div class="missingContainer">
            <h2>No Students Today</h2>
            <a href="/admin">Add Students</a>
        </div>
    <% } %>

   
        
    
    <footer>
        <ul id="footer" class="studentFooter">
            <li id="select"><a id="selectButton" onclick="selectionMade()">Select</a></li>
            <li id="submitButton" class="backSubmitButton">
                <a id="backButton" onclick="goBack()">Back</a>
                <a onclick="submitToDB()">Submit</a>
            </li>
        </ul>
    </footer>
  </body>
</html>
