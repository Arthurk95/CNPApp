    // When the user clicks on <span> (x), close the modal
    closeButton[0].onclick = function() {
      formElement.style.display = "none";
    };
    closeButton[1].onclick = function() {
      formElement.style.display = "none";
    };
    closeButton[2].onclick = function() {
      formElement.style.display = "none";
    };

    function hideActivity(element){
      theUrl = window.location.href+'/hideactivity';
      data = "id=" + element;
      callback = reloadIt;

      httpPutAsync(theUrl, data, callback);
    }

    function editActivity(id){
      //take new input
      editActivityPost(id, "crab battle");
    }

    function editActivityPost(id,name){
      theUrl = window.location.href+'/editactivity';
