              <div class="blockContainer">
                <p title="Create Student" onclick="addActivity()">New Activity +</p>
              </div>
            </li>
          </ul>
          <% } else { %>
            <h2>No activities</h2>
          <% } %>
        </div>
      
      <h3 class="accordion">Tasks</h3>
        <div class="accordionPanel">
          <p>Lorem ipsum...</p>
        </div>
  </div>
    

    
