  <script>
    // Get the modal
    var formElement = document.getElementById("newStudentForm");

    // opens student profile in same tab when a student is clicked
    function selectedStudent(element, studentID){
      window.location.href ="/admin/student-profile/" + studentID;
    }

    document.getElementById("students").style.display = "block";
    // Get the <span> element that closes the modal
    var closeButton = document.getElementsByClassName("close")[0];

    // When the user clicks on the button, open the modal
    function addStudent() {
      formElement.style.display = "block";
    }

    // When the user clicks on <span> (x), close the modal
    closeButton.onclick = function() {
      formElement.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
      if (event.target == formElement) {
        formElement.style.display = "none";
      }
    }

    document.getElementById("studentsTab").style.display = "block";
    document.getElementById("studentsTabButton").className += " active";
